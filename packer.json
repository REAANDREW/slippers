{
  "variables": {
    "ansible_host": "default",
    "ansible_connection": "docker",
    "tag": ""
  },
  "builders": [
    {
      "type": "docker",
      "image": "alpine",
      "commit": "true",
      "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "{{user `ansible_host`}}",
        "{{.Image}}",
        "/bin/ash"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apk update",
        "apk add python",
        "apk add sudo",
        "apk add bash",
        "apk add py-pip",
        "apk --update add curl tar zip unzip shadow && curl -Ls https://github.com/sgerrand/alpine-pkg-glibc/releases/download/2.25-r0/glibc-2.25-r0.apk > /tmp/glibc-2.25-r0.apk && apk add --allow-untrusted /tmp/glibc-2.25-r0.apk",
        "addgroup talula",
        "adduser -D -G talula talula",
        "echo 'talula:talula' | chpasswd",
        "echo 'talula ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers"
      ]
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "./ansible/playbook.yml",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "reaandrew/devenv_base",
	"tag": "{{user `tag`}}"
      }
    ]
  ]
}
